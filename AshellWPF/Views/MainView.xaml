<Window
    x:Class="AshellWPF.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:AshellWPF.Core;assembly=AshellWPF.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AshellWPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="MainView"
    Width="1000"
    Height="720"
    MinWidth="650"
    MinHeight="625"
    d:DesignHeight="720"
    d:DesignWidth="1000"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border
        x:Name="HighContrastBorder"
        BorderBrush="Transparent"
        BorderThickness="8,0,2,8">
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64" />
                <ColumnDefinition
                    Width="210"
                    MinWidth="210"
                    MaxWidth="584" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="0" prism:RegionManager.RegionName="{x:Static core:RegionsConstants.MainNavigateRegion}" />
            <ContentControl Grid.Column="1" prism:RegionManager.RegionName="{x:Static core:RegionsConstants.SubNavigateRegion}" />
            <GridSplitter
                Grid.Column="2"
                Width="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Gray"
                ShowsPreview="True" />
            <ContentControl
                Grid.Column="3"
                prism:RegionManager.RegionName="{x:Static core:RegionsConstants.MainContentRegion}"
                Foreground="AliceBlue" />

        </Grid>
    </Border>
</Window>
