<UserControl
    x:Class="ControlSamples.Views.ThumbSampleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ControlSamples.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Canvas
        x:Name="canvas"
        Width="400"
        Height="400"
        Background="AliceBlue">
        <Button
            x:Name="button"
            Canvas.Left="100"
            Canvas.Top="100"
            BorderBrush="CadetBlue"
            BorderThickness="1" />
        <Rectangle
            x:Name="rectangle"
            Canvas.Left="200"
            Canvas.Top="200"
            Width="100"
            Height="100"
            Fill="LightCoral" />
    </Canvas>
</UserControl>
