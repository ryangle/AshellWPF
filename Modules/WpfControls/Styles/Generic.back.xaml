<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfControls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfControls;component/Styles/TextButtonStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <SolidColorBrush x:Key="IconButton.Static.Foreground" Color="Red"/>
    <Style TargetType="{x:Type local:IconButton}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:IconButton}">
                    <StackPanel>
                        <Viewbox>
                            <Path Data="{TemplateBinding IconData}" Fill="{StaticResource IconButton.Static.Foreground}" Stretch="Uniform"/>
                        </Viewbox>
                        <ContentPresenter></ContentPresenter>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
