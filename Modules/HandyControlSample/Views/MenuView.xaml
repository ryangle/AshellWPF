<UserControl
    x:Class="HandyControlSample.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:HandyControlSample.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControlSample;component/Resource/Style/Geometry.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControlSample;component/Resource/Style/Color.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="IconFont">pack://application:,,,/Resource/#iconfont</FontFamily>
        </ResourceDictionary>
    </UserControl.Resources>
    <hc:TransitioningContentControl>
        <UniformGrid
            Margin="10"
            Columns="1"
            Rows="3">
            <hc:SimplePanel Margin="10">
                <TextBlock
                    Foreground="{DynamicResource BorderBrush}"
                    Style="{StaticResource TextBlockTitle}"
                    Text="Right Click Here" />
                <Rectangle
                    Width="200"
                    Height="112"
                    RadiusX="4"
                    RadiusY="4"
                    Stroke="{DynamicResource BorderBrush}"
                    StrokeDashArray="2,2" />
                <Border
                    Width="200"
                    Height="112"
                    Background="Transparent">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Name1">
                                <MenuItem Header="SubName1-1" />
                                <MenuItem Header="SubName1-2" />
                            </MenuItem>
                            <MenuItem Header="Name2">
                                <MenuItem Header="SubName2-1" />
                                <MenuItem Header="SubName2-2" />
                            </MenuItem>
                            <MenuItem Header="Name3" />
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
            </hc:SimplePanel>
            <hc:SimplePanel Margin="10">
                <TextBlock
                    Foreground="{DynamicResource BorderBrush}"
                    Style="{StaticResource TextBlockTitle}"
                    Text="Right Click Here" />
                <Rectangle
                    Width="200"
                    Height="112"
                    RadiusX="4"
                    RadiusY="4"
                    Stroke="{DynamicResource BorderBrush}"
                    StrokeDashArray="2,2" />
                <Border
                    Width="200"
                    Height="112"
                    Background="Transparent">
                    <Border.ContextMenu>
                        <ContextMenu ItemsSource="{Binding DataList}">
                            <ContextMenu.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding DataList}">
                                    <MenuItem Header="{Binding Header}">
                                        <MenuItem.Icon>
                                            <TextBlock
                                                FontFamily="{StaticResource IconFont}"
                                                Style="{StaticResource TextBlockSubTitle}"
                                                Text="{Binding Content}" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </HierarchicalDataTemplate>
                            </ContextMenu.ItemTemplate>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
            </hc:SimplePanel>

            <Menu>
                <MenuItem Header="MenuItem 1">
                    <MenuItem.Icon>
                        <Path
                            Width="20"
                            Height="20"
                            Data="{DynamicResource AddGeometry}"
                            Fill="{DynamicResource PrimaryBrush}"
                            Stretch="Uniform" />
                    </MenuItem.Icon>
                    <MenuItem Header="MenuItem 1.1">
                        <MenuItem.Icon>
                            <Path
                                Width="20"
                                Height="20"
                                Data="{DynamicResource AddGeometry}"
                                Fill="{DynamicResource PrimaryBrush}"
                                Stretch="Uniform" />
                        </MenuItem.Icon>
                        <MenuItem Header="MenuItem 1.1.1">
                            <MenuItem Header="MenuItem 1.1.1.1" />
                            <MenuItem Header="MenuItem 1.1.1.2">
                                <MenuItem.Icon>
                                    <Path
                                        Width="20"
                                        Height="20"
                                        Data="{DynamicResource AddGeometry}"
                                        Fill="{DynamicResource PrimaryBrush}"
                                        Stretch="Uniform" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="MenuItem 1.1.2" />
                    </MenuItem>
                    <Separator />
                    <MenuItem
                        Header="MenuItem 1.2"
                        IsCheckable="True"
                        IsChecked="True" />
                    <MenuItem Header="MenuItem 1.3" />
                    <MenuItem Header="MenuItem 1.4" />
                    <MenuItem Header="MenuItem 1.5" />
                </MenuItem>
                <MenuItem Header="MenuItem 2" />
                <MenuItem Header="MenuItem 3" />
                <MenuItem Header="MenuItem 4" />
            </Menu>
        </UniformGrid>
    </hc:TransitioningContentControl>
</UserControl>
