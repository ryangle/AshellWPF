<UserControl
    x:Class="HandyControlSample.Views.ButtonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:HandyControlSample.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControlSample;component/Resource/Style/Geometry.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControlSample;component/Resource/Style/Color.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="IconFont">pack://application:,,,/Resource/#iconfont</FontFamily>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <UniformGrid Columns="6" Rows="3">
            <UniformGrid Columns="4" Rows="2">
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource LeftGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource RightGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource ClockGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource CalendarGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource StarGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource DownloadGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="3"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource UpDownGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="3"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource AudioGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
            </UniformGrid>

            <UniformGrid Columns="4" Rows="2">
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource FullScreenGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource FullScreenReturnGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="6"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource AddGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="6,14"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource SubGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource WarningGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource InfoGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource SuccessGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
            </UniformGrid>

            <UniformGrid Columns="4" Rows="2">
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource FatalGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource AskGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource DeleteGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource DropperGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource WindowsGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource SearchGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource EyeOpenGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="32"
                    Height="32"
                    Padding="5"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource EyeCloseGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="2">
                <Button
                    Width="160"
                    Height="48"
                    Margin="3"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="Default Button"
                    Foreground="{DynamicResource TextIconBrush}" />
                <Button
                    Width="160"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="0"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="Primary Button"
                    Foreground="{DynamicResource TextIconBrush}" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="2">
                <Button
                    Width="160"
                    Height="48"
                    Margin="3"
                    hc:BackgroundSwitchElement.MouseDownBackground="{DynamicResource MouseDownBrush}"
                    hc:BackgroundSwitchElement.MouseHoverBackground="{DynamicResource MouseHoverBrush}"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="Custom Button"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonCustom}" />
                <Button
                    Width="160"
                    Height="48"
                    Margin="3"
                    hc:BackgroundSwitchElement.MouseDownBackground="{DynamicResource MouseDownBrush}"
                    hc:BackgroundSwitchElement.MouseHoverBackground="{DynamicResource MouseHoverBrush}"
                    Background="{DynamicResource PrimaryBrush}"
                    Style="{StaticResource ButtonCustom}">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image Source="pack://application:,,,/Resource/Image/icon.ico" />
                            <Label
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Content="Custom Button"
                                Foreground="{DynamicResource TextIconBrush}" />
                        </Grid>
                    </Button.Content>
                </Button>
            </UniformGrid>

            <UniformGrid Columns="1" Rows="2">
                <RepeatButton
                    Width="160"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="0"
                    Background="{DynamicResource PrimaryBrush}"
                    Click="RepeatButton_Click"
                    Content="Repeat Button"
                    Delay="500"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource RepeatButtonPrimary}" />
                <RepeatButton
                    Width="160"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="0"
                    hc:IconElement.Geometry="{StaticResource AllGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Click="RepeatButton_Click"
                    Content="Repeat Button"
                    Delay="500"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource RepeatButtonPrimary}" />
            </UniformGrid>

            <UniformGrid Columns="4" Rows="2">
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource ErrorGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource AskGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource InfoGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource AllGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource DownGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource UpGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource LeftGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource RightGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
            </UniformGrid>

            <UniformGrid Columns="4" Rows="2">
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource EnlargeGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource ReduceGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource RotateLeftGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource SaveGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource WindowsGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource SearchGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource EyeOpenGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
                <Button
                    Width="32"
                    Height="32"
                    Style="{StaticResource ButtonCustom}">
                    <Path
                        Margin="0"
                        Data="{StaticResource EyeCloseGeometry}"
                        Fill="{DynamicResource PrimaryBrush}"
                        Stretch="Uniform" />
                </Button>
            </UniformGrid>

            <UniformGrid Columns="2" Rows="2">
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource WindowMinGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource WindowRestoreGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource WindowMaxGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource CloseGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
            </UniformGrid>

            <UniformGrid Columns="2" Rows="2">
                <Button
                    Width="48"
                    Height="48"
                    Padding="10"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource WindowMinGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonIcon}" />
                <Button
                    Width="48"
                    Height="48"
                    Padding="10"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource WindowRestoreGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonIcon}" />
                <Button
                    Width="48"
                    Height="48"
                    Padding="10"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource WindowMaxGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonIcon}" />
                <Button
                    Width="48"
                    Height="48"
                    Padding="10"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconElement.Geometry="{StaticResource CloseGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonIcon}" />
            </UniformGrid>

            <UniformGrid Columns="3" Rows="2">
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="&#xe604;"
                    FontFamily="{StaticResource IconFont}"
                    FontSize="28"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="&#xe603;"
                    FontFamily="{StaticResource IconFont}"
                    FontSize="28"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="&#xe602;"
                    FontFamily="{StaticResource IconFont}"
                    FontSize="28"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="&#xe601;"
                    FontFamily="{StaticResource IconFont}"
                    FontSize="28"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="&#xe600;"
                    FontFamily="{StaticResource IconFont}"
                    FontSize="28"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
                <Button
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="&#xe67f;"
                    FontFamily="{StaticResource IconFont}"
                    FontSize="28"
                    Foreground="{DynamicResource TextIconBrush}"
                    Style="{StaticResource ButtonPrimary}" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="2">
                <ToggleButton
                    Width="160"
                    Height="48"
                    Margin="3"
                    hc:IconElement.Geometry="{StaticResource ClockGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="ToggleButton"
                    Foreground="{DynamicResource TextIconBrush}"
                    IsChecked="True"
                    Style="{StaticResource ToggleButtonPrimary}" />
                <ToggleButton
                    Width="160"
                    Height="48"
                    Margin="3"
                    hc:IconElement.Geometry="{StaticResource CalendarGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="ToggleButton"
                    Foreground="{DynamicResource TextIconBrush}"
                    IsChecked="True"
                    Style="{StaticResource ToggleButtonSuccess}" />
            </UniformGrid>

            <UniformGrid Columns="2" Rows="2">
                <ToggleButton
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:BorderElement.CornerRadius="24"
                    hc:IconSwitchElement.Geometry="{StaticResource EyeCloseGeometry}"
                    hc:IconSwitchElement.GeometrySelected="{StaticResource EyeOpenGeometry}"
                    Background="{DynamicResource PrimaryBrush}"
                    IsChecked="True"
                    Style="{StaticResource ToggleButtonIconPrimary}" />
                <ToggleButton
                    Width="48"
                    Height="48"
                    Margin="3"
                    hc:StatusSwitchElement.HideUncheckedElement="True"
                    IsChecked="True"
                    Style="{StaticResource ToggleButtonCustom}">
                    <hc:StatusSwitchElement.CheckedElement>
                        <Border
                            Width="36"
                            Height="36"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="24">
                            <Ellipse
                                Width="31"
                                Height="31"
                                Fill="{DynamicResource PrimaryBrush}"
                                Stroke="{DynamicResource PrimaryBrush}"
                                StrokeThickness="0" />
                        </Border>
                    </hc:StatusSwitchElement.CheckedElement>
                    <Border
                        Width="36"
                        Height="36"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="1"
                        CornerRadius="24">
                        <Ellipse
                            Width="30"
                            Height="30"
                            Fill="{DynamicResource BorderBrush}"
                            Stroke="{DynamicResource BorderBrush}"
                            StrokeThickness="1" />
                    </Border>
                </ToggleButton>
                <ToggleButton
                    Width="48"
                    Height="48"
                    Margin="3"
                    BorderThickness="0"
                    IsChecked="True"
                    Style="{StaticResource ToggleButtonFlip}">
                    <hc:StatusSwitchElement.CheckedElement>
                        <Border Background="{DynamicResource PrimaryBrush}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextIconBrush}"
                                Text="On" />
                        </Border>
                    </hc:StatusSwitchElement.CheckedElement>
                    <Border Background="{DynamicResource BorderBrush}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            Text="Off" />
                    </Border>
                </ToggleButton>
                <ToggleButton
                    Width="48"
                    Height="48"
                    Margin="3"
                    IsChecked="True"
                    Style="{StaticResource ToggleButtonSwitch}" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="3">
                <RadioButton
                    Margin="3"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsChecked="True" />
                <RadioButton
                    Margin="3"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}" />
                <RadioButton
                    Margin="3"
                    Background="{DynamicResource PrimaryBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="3">
                <RadioButton
                    Margin="3"
                    hc:IconElement.Geometry="{StaticResource CalendarGeometry}"
                    hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                    Background="{DynamicResource SecondaryRegionBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Style="{StaticResource RadioButtonIcon}" />
                <RadioButton
                    Margin="3"
                    hc:IconElement.Geometry="{StaticResource CalendarGeometry}"
                    hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                    Background="{DynamicResource SecondaryRegionBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Style="{StaticResource RadioButtonIcon}" />
                <RadioButton
                    Margin="3"
                    hc:IconElement.Geometry="{StaticResource CalendarGeometry}"
                    hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                    Background="{DynamicResource SecondaryRegionBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsChecked="True"
                    Style="{StaticResource RadioButtonIcon}" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="3">
                <RadioButton
                    Margin="3"
                    hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                    Background="{DynamicResource SecondaryRegionBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Style="{StaticResource RadioButtonIcon}" />
                <RadioButton
                    Margin="3"
                    hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                    Background="{DynamicResource SecondaryRegionBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Style="{StaticResource RadioButtonIcon}" />
                <RadioButton
                    Margin="3"
                    hc:VisualElement.HighlightBrush="{DynamicResource PrimaryBrush}"
                    Background="{DynamicResource SecondaryRegionBrush}"
                    Content="RadioButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsEnabled="False"
                    Style="{StaticResource RadioButtonIcon}" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="3">
                <CheckBox
                    Content="CheckBox"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsChecked="False" />
                <CheckBox
                    Content="CheckBox"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsChecked="True" />
                <CheckBox
                    Content="CheckBox"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsEnabled="False" />
            </UniformGrid>

            <UniformGrid Columns="1" Rows="4">
                <hc:ProgressButton
                    Width="160"
                    hc:BorderElement.CornerRadius="0"
                    Click="ProgressButton_Click"
                    Content="ProgressButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsChecked="False"
                    Progress="0" />
                <hc:ProgressButton
                    Width="160"
                    hc:BorderElement.CornerRadius="0"
                    Background="{DynamicResource PrimaryBrush}"
                    Click="ProgressButton_Click"
                    Content="ProgressButton"
                    Foreground="{DynamicResource TextIconBrush}"
                    IsChecked="False"
                    Progress="0" />
                <ToggleButton
                    Width="160"
                    hc:BorderElement.CornerRadius="0"
                    Content="ProgressToggleButton"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    IsChecked="True"
                    Style="{StaticResource ToggleButtonLoading}" />
                <ToggleButton
                    Width="160"
