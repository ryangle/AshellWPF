<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dd="clr-namespace:DiagramDesigner;assembly=DiagramDesigner"
    xmlns:pathFinder="clr-namespace:DiagramDesigner.PathFinder;assembly=DiagramDesigner"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ToolBar.xaml" />
        <ResourceDictionary Source="Shared.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ToolBar x:Key="MyToolbar" Height="120">
        <!--  File  -->
        <GroupBox
            Margin="5,3,3,3"
            Header="File"
            Style="{StaticResource ToolbarGroup}">
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button
                    Width="55"
                    Margin="3"
                    HorizontalContentAlignment="Center"
                    Command="{x:Static ApplicationCommands.New}"
                    CommandTarget="{Binding ElementName=MyDesigner}"
                    Style="{StaticResource ToolBarButtonBaseStyle}">
                    <Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Image Width="45" Source="Images/GenericDocument.png" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Text="New" />
                        </Grid>
                    </Button.Content>
                </Button>
                <StackPanel Margin="0,2,0,2" Orientation="Vertical">
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Open}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/OpenFolder.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Open" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Save}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/Save.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Save" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Print}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/Print.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Print" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!--  Edit  -->
        <GroupBox
            Margin="3"
            Header="Edit"
            Style="{StaticResource ToolbarGroup}">
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button
                    Width="55"
                    Margin="3"
                    Command="{x:Static ApplicationCommands.Paste}"
                    CommandTarget="{Binding ElementName=MyDesigner}"
                    Style="{StaticResource ToolBarButtonBaseStyle}">
                    <Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Image Width="45" Source="Images/PasteBig.png" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Text="Paste" />
                        </Grid>
                    </Button.Content>
                </Button>
                <StackPanel Margin="0,2,0,2" Orientation="Vertical">
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Cut}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/Cut.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Cut" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Copy}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/Copy.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Copy" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Delete}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/Delete.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Delete" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Margin="0,2,0,2" Orientation="Vertical">
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Undo}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="14" Source="Images/Undo.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Undo" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="1"
                        Padding="2"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static ApplicationCommands.Redo}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="14" Source="Images/Redo.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Redo" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!--  Alignment  -->
        <GroupBox
            Margin="3"
            Header="Alignment"
            Style="{StaticResource ToolbarGroup}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <Border
                        Margin="3"
                        BorderBrush="{StaticResource ToolbarBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="2">
                        <StackPanel Orientation="Horizontal">
                            <Button
                                Padding="5"
                                Command="{x:Static dd:DesignerCanvas.AlignLeft}"
                                CommandTarget="{Binding ElementName=MyDesigner}"
                                Style="{StaticResource ToolBarButtonBaseStyle}">
                                <Button.Content>
                                    <Image Width="16" Source="Images/AlignObjectsLeft.png" />
                                </Button.Content>
                            </Button>
                            <Button
                                Padding="5"
                                Command="{x:Static dd:DesignerCanvas.AlignHorizontalCenters}"
                                CommandTarget="{Binding ElementName=MyDesigner}"
                                Style="{StaticResource ToolBarButtonBaseStyle}">
                                <Button.Content>
                                    <Image Width="16" Source="Images/AlignObjectsCenteredHorizontal.png" />
                                </Button.Content>
                            </Button>
                            <Button
                                Padding="5"
                                Command="{x:Static dd:DesignerCanvas.AlignRight}"
                                CommandTarget="{Binding ElementName=MyDesigner}"
                                Style="{StaticResource ToolBarButtonBaseStyle}">
                                <Button.Content>
                                    <Image Width="16" Source="Images/AlignObjectsRight.png" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Border>
                    <Border
                        Margin="3"
                        BorderBrush="{StaticResource ToolbarBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="2">
                        <StackPanel Orientation="Horizontal">
                            <Button
                                Padding="5"
                                Command="{x:Static dd:DesignerCanvas.AlignTop}"
                                CommandTarget="{Binding ElementName=MyDesigner}"
                                Style="{StaticResource ToolBarButtonBaseStyle}">
                                <Button.Content>
                                    <Image Width="16" Source="Images/AlignObjectsTop.png" />
                                </Button.Content>
                            </Button>
                            <Button
                                Padding="5"
                                Command="{x:Static dd:DesignerCanvas.AlignVerticalCenters}"
                                CommandTarget="{Binding ElementName=MyDesigner}"
                                Style="{StaticResource ToolBarButtonBaseStyle}">
                                <Button.Content>
                                    <Image Width="16" Source="Images/AlignObjectsCenteredVertical.png" />
                                </Button.Content>
                            </Button>
                            <Button
                                Padding="5"
                                Command="{x:Static dd:DesignerCanvas.AlignBottom}"
                                CommandTarget="{Binding ElementName=MyDesigner}"
                                Style="{StaticResource ToolBarButtonBaseStyle}">
                                <Button.Content>
                                    <Image Width="16" Source="Images/AlignObjectsBottom.png" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Margin="5,0,0,0"
                    Orientation="Vertical">
                    <Button
                        Margin="3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.DistributeHorizontal}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/DistributeObjectsHorizontal.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="Horizontal" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.DistributeVertical}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/DistributeObjectsVertical.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="Vertical" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <Line
                    Grid.Column="1"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Left"
                    Stretch="Fill"
                    Stroke="{StaticResource ToolbarBorderBrush}"
                    StrokeThickness="1"
                    X1="0"
                    X2="0"
                    Y1="0"
                    Y2="20" />
            </Grid>
        </GroupBox>

        <!--  Arrange  -->
        <GroupBox
            Margin="3"
            Header="Arrange"
            Style="{StaticResource ToolbarGroup}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Button
                        Margin="0,3,0,3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.Group}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/Group.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="Group" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="0,3,0,3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.Ungroup}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/Ungroup.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="Ungroup" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="7,0,0,0">
                    <Button
                        Margin="0,3,0,3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.BringForward}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/BringForward.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="Forward" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="0,3,0,3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.BringToFront}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/BringToFront.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="To Front" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <Line
                    Grid.Column="1"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Left"
                    Stretch="Fill"
                    Stroke="{StaticResource ToolbarBorderBrush}"
                    StrokeThickness="1"
                    X1="0"
                    X2="0"
                    Y1="0"
                    Y2="20" />
                <StackPanel Grid.Column="2">
                    <Button
                        Margin="0,3,0,3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.SendBackward}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/SendBackward.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="Backward" />
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button
                        Margin="0,3,0,3"
                        Padding="5"
                        HorizontalContentAlignment="Left"
                        Command="{x:Static dd:DesignerCanvas.SendToBack}"
                        CommandTarget="{Binding ElementName=MyDesigner}"
                        Style="{StaticResource ToolBarButtonBaseStyle}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Width="16" Source="Images/SendToBack.png" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Text="To Back" />
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox
            Margin="3"
            Header="PathFinder"
            Style="{StaticResource ToolbarGroup}">
            <Grid>
                <Grid.Resources>
                    <ObjectDataProvider
                        x:Key="PathFinderTypes"
                        MethodName="GetValues"
                        ObjectType="{x:Type sys:Enum}">
                        <ObjectDataProvider.MethodParameters>
                            <x:Type TypeName="pathFinder:PathFinderTypes" />
                        </ObjectDataProvider.MethodParameters>
                    </ObjectDataProvider>
                </Grid.Resources>
                <ComboBox
                    Height="20"
                    ItemsSource="{Binding Source={StaticResource PathFinderTypes}}"
                    SelectedItem="{Binding ElementName=MyDesigner, Path=PathFinder}" />
            </Grid>
        </GroupBox>
    </ToolBar>
</ResourceDictionary>